package orders;

import java.util.ArrayList;

import mainMenu.MenuItem;

public class StoreOrder implements Customizable {
	public ArrayList<Order> storeOrders;
	@Override
	public boolean add(Object obj) {
		listInitilized();
		if(obj instanceof Order) {
			this.storeOrders.add((Order)obj);
			return true;
		}
		return false;
	}
	@Override
	public boolean remove(Object obj) {
		listInitilized();
		if(obj instanceof Order) {
			for(int i = 0; i < storeOrders.size(); i++) {
				if(this.storeOrders.get(i).isEqual((Order)obj) == 0) {
					this.storeOrders.remove(storeOrders.get(i));
					return true;
				}
			}
		}
		return false;
	}
	
	private void listInitilized(){
		if(this.storeOrders == null) {
			this.storeOrders = new ArrayList<Order>();
		}
	}
	public boolean isEmpty() {
		if(this.storeOrders.isEmpty())
			return true;
		else
			return false;
	}
}
